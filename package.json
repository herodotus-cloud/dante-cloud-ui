{
  "name": "herodotus-cloud-ui",
  "private": true,
  "version": "3.3.0.0-RC5",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "commit": "git add . && git status && git-cz",
    "push": "pnpm run commit && git push --set-upstream origin reactive-develop",
    "dev": "pnpm run --filter=@dante/ui dev",
    "prod": "pnpm run --filter=@dante/ui prod",
    "shared:build": "pnpm -r --filter=@herodotus/* run build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky-run": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|json|md|scss|ts|vue)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@quasar/extras": "^1.16.11",
    "lodash-es": "^4.17.21",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "qs": "^6.12.1",
    "quasar": "^2.16.4",
    "vue": "^3.4.27",
    "vue-i18n": "^9.13.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.2",
    "@quasar/vite-plugin": "^1.7.0",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.12.12",
    "@types/qs": "^6.9.15",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "commitizen": "^4.3.0",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.3.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-quasar": "^1.1.0",
    "eslint-plugin-vue": "^9.26.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.38",
    "postcss-html": "^1.7.0",
    "prettier": "^3.2.5",
    "rollup": "4.17.2",
    "rollup-plugin-visualizer": "^5.12.0",
    "sass": "^1.77.2",
    "stylelint": "^16.5.0",
    "stylelint-config-recess-order": "^5.0.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^13.1.0",
    "terser": "^5.31.0",
    "typescript": "^5.4.5",
    "unplugin-auto-import": "^0.17.6",
    "unplugin-icons": "^0.19.0",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^5.2.11",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "3.9.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-node-polyfills": "^0.21.0",
    "vue-tsc": "^2.0.19"
  }
}
