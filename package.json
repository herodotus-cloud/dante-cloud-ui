{
  "name": "dante-cloud-ui",
  "private": true,
  "version": "3.4.1.1",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "commit": "git add . && git status && git-cz",
    "push": "pnpm run commit && git push --set-upstream origin develop",
    "dev": "pnpm run --filter=@dante/ui dev",
    "prod": "pnpm run --filter=@dante/ui prod",
    "shared:build": "pnpm -r --filter=@herodotus/* run build"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky-run": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|json|md|scss|ts|vue)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@quasar/extras": "^1.16.15",
    "lodash-es": "^4.17.21",
    "pinia": "^2.3.0",
    "pinia-plugin-persistedstate": "^4.2.0",
    "qs": "^6.13.1",
    "quasar": "^2.17.6",
    "vue": "^3.5.13",
    "vue-i18n": "^11.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.11",
    "@quasar/vite-plugin": "^1.8.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.10.5",
    "@types/qs": "^6.9.17",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "@vitejs/plugin-vue": "^5.2.1",
    "commitizen": "^4.3.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.7",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-quasar": "^1.1.0",
    "eslint-plugin-vue": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "postcss": "^8.4.49",
    "postcss-html": "^1.7.0",
    "prettier": "^3.4.2",
    "rollup": "4.30.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "sass": "^1.83.1",
    "stylelint": "^16.13.0",
    "stylelint-config-recess-order": "^5.1.1",
    "stylelint-config-recommended-vue": "^1.5.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "terser": "^5.37.0",
    "typescript": "^5.7.3",
    "unplugin-auto-import": "^19.0.0",
    "unplugin-icons": "^22.0.0",
    "unplugin-vue-components": "^28.0.0",
    "vite": "^6.0.7",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-dts": "4.5.0",
    "vite-plugin-html": "^3.2.2",
    "vue-tsc": "^2.2.0"
  }
}
