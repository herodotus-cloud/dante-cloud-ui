{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "declaration": true,
    "typeRoots": [
      "packages/**/types",
      "packages/**/node_modules/@types",
      "shared/**/types",
      "shared/**/node_modules/@types"
    ]
  },
  "exclude": [
    "build/dist",
    "node_modules",
    "packages/**/node_modules",
    "shared/**/dist",
    "shared/**/node_modules"
  ]
}
